<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/top_item_radius"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginRight="@dimen/item_book_margin"
        app:cardElevation="@dimen/top_item_elevation"
        >

        <ImageView
            android:layout_width="@dimen/popular_book_width"
            android:layout_height="@dimen/popular_book_height"
            android:scaleType="fitXY"
            android:src="@drawable/popular_book"
            />

    </android.support.v7.widget.CardView>





